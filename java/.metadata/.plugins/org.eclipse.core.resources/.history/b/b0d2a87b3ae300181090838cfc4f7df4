package random;

public class random {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int resultado=0;
		int a,b,c,i;
		i=0;
		while(resultado!=60) 
		{
			a=(int) Math.floor(Math.random()*101);
			b=(int) Math.floor(Math.random()*101);
			c=(int) Math.floor(Math.random()*101);
			resultado=a+b+c;
			i++;
			System.out.println(a+" + "+b+" + "+c+" = "+resultado+" vuelta nº: "+i);
			if (resultado >60) 
			{
				resultado =0;
			}

			
		}
	}

}
